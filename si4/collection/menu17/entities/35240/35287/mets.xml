         <METS:xmlData>
            <dc:title xml:lang="slv">Migracije in stereotipi</dc:title>
            <dc:title xml:lang="slv">Primer optantov</dc:title>
            <dc:creator>Gombač, Jure</dc:creator>
            <dc:subject xml:lang="slv">stereotipi</dc:subject>
            <dc:subject xml:lang="slv">migracije</dc:subject>
