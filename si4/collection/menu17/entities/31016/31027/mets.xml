         <METS:xmlData>
            <dc:title xml:lang="eng">Ideal Childhood on the Front Cover: Sovietness, Folkness and Globality in Russian Reading Primer 1980s–2000s</dc:title>
            <dc:creator>Bezrogov, Vitaly</dc:creator>
            <dc:subject xml:lang="slv">otroštvo</dc:subject>
            <dc:subject xml:lang="slv">zgodovina</dc:subject>
