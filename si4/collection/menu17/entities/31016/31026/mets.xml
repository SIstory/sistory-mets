         <METS:xmlData>
            <dc:title xml:lang="slv">Otroci in raziskovalci: pripovedi o otroštvu in spomini</dc:title>
            <dc:creator>Vodopivec, Nina</dc:creator>
            <dc:subject xml:lang="slv">zgodovina otrok</dc:subject>
            <dc:subject xml:lang="slv">antropologija otroštva</dc:subject>
            <dc:subject xml:lang="slv">spomini</dc:subject>
