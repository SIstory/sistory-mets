         <METS:xmlData>
            <dc:title xml:lang="slv">Nasilnost druge svetovne vojne in otroštvo</dc:title>
            <dc:creator>Deželak Barič, Vida</dc:creator>
            <dc:subject xml:lang="slv">okupacija</dc:subject>
            <dc:subject xml:lang="slv">raznarodovanje</dc:subject>
            <dc:subject xml:lang="slv">odpor</dc:subject>
