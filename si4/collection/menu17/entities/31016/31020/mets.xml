         <METS:xmlData>
            <dc:title xml:lang="slv">Oris podobe otrok v času reformacije s primeri iz besedil Primoža Trubarja</dc:title>
            <dc:creator>Paulič, Anja</dc:creator>
            <dc:subject xml:lang="slv">otroštvo</dc:subject>
